  <slide>
    <title>What's your Personal Disability Quotient (PDQ)?</title>
    <contents>
      <p>Calculate your Personal Disability Quotient</p>

      <script>
        const age = [
          [18, 22],
          [13, 16],
          [ 9, 10],
          [ 1,  1],
          [ 0,  0]
        ];

        const pdqResult = [
          [25, '5-25% chance', 'Below average'],
          [36, '25-35% chance', 'Average'],
          [50, '35-50% chance', 'Above average'],
          [200, '50% or more chance', 'Significantly above average']
        ];

        function getValue (name) {
          const radioNodes = document.querySelectorAll(`[name=${name}]`);
          for (let i = 0; i &lt; radioNodes.length; i += 1 ) {
            if (radioNodes[i].checked) {
              console.log(`[${name}Value]: ${radioNodes[i].value}`);
              return parseInt(radioNodes[i].value);
            }
          }
          return 0;
        }

        function computePDQ() {

          console.log(`=== Compute ===`);
          const genderValue = getValue('gender');
          const ageValue = getValue('age');

          let pdq = age[ageValue][genderValue];

          pdq += getValue('activity');
          pdq += getValue('bmi');
          pdq += getValue('tabacco');
          pdq += getValue('life');
          pdq += getValue('mc');

          console.log(`[pdq]: ${pdq}`);

          let prop   = pdqResult[0][1];
          let likely = pdqResult[0][2];

          for (let i = 0; i &lt; pdqResult.length; i += 1) {
            prop   = pdqResult[i][1];
            likely = pdqResult[i][2];
            if (pdq &lt; pdqResult[i][0]) {
              break;
            }
          }

          const pdqCell = document.querySelector('#pdq-value');
          pdqCell.textContent = pdq.toString();

          const propCell = document.querySelector('#pdq-prop');
          propCell.textContent = prop;

          const likelyCell = document.querySelector('#pdq-likely');
          likelyCell.textContent = likely;

        }
      </script>

      <form action="javascript:computePDQ()">

        <fieldset>
          <legend>Gender</legend>

          <div class="form-check">
            <input class="form-check-input" id="g1" type="radio" name="gender" value="0" required=""/>
            <label class="form-check-label" for="g1">Male</label>
          </div>
          <div class="form-check">
            <input class="form-check-input"  id="g2" type="radio" name="gender" value="1"/>
            <label class="form-check-label"  for="g2">Female</label>
          </div>
          <div class="form-check">
            <input class="form-check-input"  id="g3" type="radio" name="gender" value="0"/>
            <label class="form-check-label"  for="g3">Trans-gender Male</label>
          </div>
          <div class="form-check">
            <input class="form-check-input"  id="g4" type="radio" name="gender" value="1"/>
            <label class="form-check-label"  for="g4">Trans-gender Female</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" id="g5" type="radio" name="gender" value="1"/>
            <label class="form-check-label" for="g5">Non-Binary</label>
          </div>
        </fieldset>

        <fieldset>
          <legend>Age (Years)</legend>

          <div class="form-check">
            <input class="form-check-input" id="age1" type="radio" name="age" value="0" required=""/>
            <label class="form-check-label" for="age1">&lt;25</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" id="age2" type="radio" name="age" value="1"/>
            <label class="form-check-label" for="age2">25-34</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" id="age3" type="radio" name="age" value="2"/>
            <label class="form-check-label" for="age3">35-44</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" id="age4" type="radio" name="age" value="3"/>
            <label class="form-check-label" for="age4">45-54</label>
